---
pagination:
  data: collections
  size: 1
  alias: tag
permalink: /experience-tags/{{ tag }}/
layout: base.njk
renderData:
  title: "Experiences tagged “{{ tag }}”"
  metaDescription: "All experiences tagged with “{{ tag }}”"
---
<div class="page-container">
  {# Header #}
  <div class="tag-list tag-list--no-wrap">
    <h4 class="tag-list__title">Projects Tagged: "{{ tag | capitalize }}"</h4>
    <a class="btn btn--sm btn--danger" href="/projects">Remove Tag</a>
  </div>

  {# Experiences #}
  {% from "macros/experiencelist.njk" import experiencelist %}
  {{ experiencelist(experiences = collections[tag] | reverse) }}

  {# Footer #}
  <nav>
    <a href="{{ '/projects/' | url }}">← View All Projects</a>
  </nav>
</div>
